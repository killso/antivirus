<UserControl x:Class="Client.UserControls.Components.ButtonPath"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.UserControls.Components"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid>
        <Button 
            x:Name="Button"
            Height="Auto"    
            Width="Auto"
            Content="Выбрать"
            Padding="20,10"
            Background="White"
            BorderThickness="0"
            FontFamily="Verdana"
            FontSize="10"
            Cursor="Hand"
            Click="Button_Click"
        />
    </Grid>
</UserControl>
